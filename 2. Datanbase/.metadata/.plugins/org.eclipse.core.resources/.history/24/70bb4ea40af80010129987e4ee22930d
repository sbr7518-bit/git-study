--  오름차순  '오름차순 정렬인 ASC는(기본값으로 들어감)'
SELECT * FROM employees
ORDER BY birth_date ;

-- 내림차순 
SELECT * FROM employees
ORDER BY birth_date DESC;

SELECT * FROM titles
ORDER BY to_date DESC;


-- 그룹 함수 (띄어쓰기 조심)

-- max 가장 큰값
SELECT max(salary) FROM salaries;

-- min 가장 낮은 값
SELECT min(salary) FROM salaries;

-- avg 평균 값
SELECT avg(salary) FROM salaries;

-- sum 합계 값
SELECT sum(salary) FROM salaries;

-- count 조회된 컬럼 갯수 -> 보통 이렇게 많이 쓴다(*)
SELECT count(*) FROM salaries;


SELECT count(*) AS '직원 수' FROM employees;


SELECT count(*) FROM salaries;


SELECT * FROM employees;

SELECT count(*) FROM titles
WHERE title = 'Engineer';

SELECT count(*) FROM employees
WHERE hire_date > '1965-01-01';

SELECT min(emp_no), 
max(emp_no) FROM employees;

----------------------------------------------------
-- GROUP BY 특정 기준을 그룹화하여 값을 조회한다 

SELECT max(emp_no), birth_date  FROM employees
GROUP BY birth_date;
-- 'birth_date'를 기준으로 하여 그 중 가장 높은 값을 불러온다. 

SELECT * FROM employees;

-- 부서별 직원 수를 부서 번호(dept_no) 기준으로 조회하기

SELECT * FROM dept_emp;

SELECT count(*), dept_no FROM dept_emp
GROUP BY dept_no;


SELECT * FROM employees;
SELECT count(*) AS 'cnt', gender FROM employees
GROUP BY gender;


SELECT * FROM titles;
SELECT count(*) AS '직원 수', title FROM titles
GROUP BY title
ORDER BY title DESC;


-- 갯수를 조회할 때 조건을 넣고 싶으면 HAVING 추가 작성해야 함
SELECT * FROM titles;
SELECT count(*) AS '직원 수', title FROM titles
GROUP BY title
HAVING count(*) >= 100000
ORDER BY title DESC;

-------------------------------------------------------------------
SELECT * FROM dept_emp;

SELECT count(DISTINCT dept_no)  FROM dept_emp;

GROUP BY dept_no;











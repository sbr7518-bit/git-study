
------- INNER JOIN -----------

-- 사번, 이름, 연봉 조회  ex> 테이블 별칭 : - e, - s.
SELECT e.emp_no, e.first_name , s.salary, to_date
FROM employees e
JOIN salaries s
ON e.emp_no = s.emp_no 
WHERE s.to_date = '9999-01-01';

SELECT *
FROM employees e
JOIN salaries s
ON e.emp_no = s.emp_no 
WHERE s.to_date = '9999-01-01';

-- 사번, 이름(first_naem), 직무 조회 (현재 재직중인)
SELECT e.emp_no, first_name, title , to_date
FROM employees e
JOIN titles t 
ON e.emp_no = t.emp_no 
WHERE to_date  = '9999-01-01';

SELECT *FROM salaries;
SELECT *FROM titles;
SELECT *FROM employees;


-- 사번, 이름, 연봉, 직무
SELECT e.emp_no, e.first_name, s.salary , t.title
FROM employees e
JOIN salaries s 
ON e.emp_no = s.emp_no 
JOIN titles t 
ON e.emp_no = t.emp_no;


SELECT e.emp_no, e.first_name, s.salary , t.title, to_date
FROM employees e
JOIN salaries s 
ON e.emp_no = s.emp_no 
JOIN titles t 
ON e.emp_no = t.emp_no
WHERE s.to_date  = '9999-01-01'
AND t.to_date = '9999-01-01';
















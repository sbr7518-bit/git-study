
-- AS 일회성 컬럼명 변경 가능, '' 없어도 상관없지만 글자 사이 띄어쓰기가 있다면 조회 안됨
SELECT emp_no AS '사번', salary * 12 AS '월급' FROM salaries s ;

SELECT emp_no + 50, first_name FROM employees
WHERE first_name = '길동';

-- DISTINCT 중복된 값을 제외한 값만 조회
SELECT DISTINCT gender FROM employees;


SELECT salary FROM salaries;
SELECT salary * 12 "예상 연봉" FROM salaries;
SELECT salary * 12 * 1.05 "인상 후 예상 연봉" FROM salaries;

SELECT 
    emp_no, 
    salary AS "현재 월급", 
    ROUND(salary * 0.05, 2) AS "인상 금액",       -- 5% 인상액
    ROUND(salary * 1.05, 2) AS "인상 후 월급",    -- 월급 + 5%
    ROUND(salary * 12 * 1.05, 2) AS "인상 후 예상 연봉"  -- 연봉
FROM salaries;

SELECT emp_no, salary, from_date, to_date FROM salaries s
WHERE salary >= 80000;

SELECT * FROM  employees
WHERE emp_no < 10005;

SELECT * FROM  employees
WHERE  hire_date > '1960-01-01' 
AND gender = 'M';

SELECT * FROM  titles
WHERE title = 'Senior Engineer'
OR title = 'Engineer';

-- salaries 테이블에서 연봉이 50000 이상이면서 60000 이하인 직원 조회
SELECT * FROM salaries
WHERE salary >= 50000
AND salary <= 60000;

-- salaries 테이블에서 연봉이 50000 이상이면서 60000 미만인 직원 조회
SELECT * FROM salaries
WHERE salary BETWEEN 50000 AND 59999;

SELECT * FROM  employees
WHERE hire_date BETWEEN '1995-01-01' AND '1995-12-31';


-- 문자열을 조회할 때 사용   'N%' : N으로 시작하는 단어를 찾는다
SELECT * FROM  employees
WHERE first_name LIKE 'N%';

--  '%en': en으로 끝나는 단어를 찾는다
SELECT * FROM  employees
WHERE first_name LIKE '%en';

-- 주로 검색할 때 사용된다
SELECT * FROM  employees
WHERE first_name LIKE '%ar%';

SELECT * FROM  employees
WHERE first_name LIKE '_di';

SELECT * FROM  employees
WHERE first_name LIKE 'G__'
AND gender = 'M';.

-- NOT LIKE : 이 값을 제외한 모두를 검색
SELECT * FROM  employees
WHERE first_name NOT LIKE 'G__'
AND gender = 'F';


-- is null : null인 값만 찾는다  / is not null를 하면 null이 아닌 값만을 찾는다
SELECT * FROM titles
WHERE to_date IS NULL;


















 

